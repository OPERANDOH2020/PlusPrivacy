<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    </style>
    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/OxygenRegular.ttf</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">

        <item name="android:textSize">20sp</item>
    </style>
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/lightOrange</item>
        <item name="actionMenuTextColor">@android:color/black</item>

        <item name="titleTextAppearance">@style/Toolbar.Title</item>
    </style>
    <style name="LoginPageTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blackTitle</item>
        <item name="android:layout_marginLeft">@dimen/loginMargin</item>
        <item name="android:layout_marginRight">@dimen/loginMargin</item>
    </style>
    <style name="LoginEditText">

        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">@dimen/loginMargin</item>
        <item name="android:layout_marginRight">@dimen/loginMargin</item>

    </style>

</resources>
